<html>
  <head>
    <title>Kokonatsu Macros</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
	<script type="text/javascript" src="https://assets.gfycat.com/gfycat.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
  </head>
  <body ng-app="kokonatsu" ng-controller="MainCtrl" controller>
    <div class="row" align = "center">
      <h1>Kokonatsu Macros</h1>
    </div>

    <!-- <nav class="navbar navbar-default">
      <div class="container-fluid">
        <ul class="nav navbar-nav" ng-repeat="guild in guilds">
          <li><a href="#">{{guild}}</a></li>
        </ul>
      </div>
    </nav> -->
    <ui-view></ui-view>


    <script type="text/ng-template" id="/home.html">
      <div class="container-fluid" align="center">
        <span ng-repeat="macro in macros | orderBy: 'macro'" style="">
          <div ng-repeat= "link in macro.links track by $index" style="display:inline-block; margin: 0px 5px;">
            <div style="float:top; "><h3>{{macro.macro}}<span ng-if="macro.links.length > 1"> ({{$index+1}})</span></h3></div>
            <div style="float:left">
              <a href="{{link}}">
              <img src="{{link}}" class="img-thumbnail" ng-if="img(link)" style="width:450px; height:252px;">
              <video ng-if="video(link)" preload="auto" autoplay="autoplay" loop="loop" style="width:450px; height:252px;"">
                <source src="{{trustAsResourceUrl(link)}}" type="video/mp4"></source>
              </video>
  		    <span class='gfyitem' data-id="{{gfycatDataID(link)}}" ng-if="gfycat(link)" style="width:450px; height:252px;"></span>
              </a>
            </div>
          </div>
        </span>
    </script>
  </body>
</html>