<html>
  <head>
    <title>Kokonatsu Macros</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
  </head>
  <body ng-app="kokonatsu" ng-controller="MainCtrl">
    <div class="row" align = "center">
      <h1>Kokonatsu Macros</h1>
    </div>

    <!-- <nav class="navbar navbar-default">
      <div class="container-fluid">
        <ul class="nav navbar-nav" ng-repeat="guild in guilds">
          <li><a href="#">{{guild}}</a></li>
        </ul>
      </div>
    </nav> -->
    <ui-view></ui-view>


    <script type="text/ng-template" id="/home.html">
      <div class="row" style="text-align: center;">
        <div class="col-md-12" ng-repeat="macro in macros | orderBy: 'macro'" style="width:500px; height:350px; float: left">
          <div align="center" style="float:top;"><h3>{{macro.macro}}</h3></div>
          <div align="center" ng-if="img(macro.text)"><img src="{{macro.text}}" class="img-thumbnail" style="float: bottom; width:100%; height:281px; display:inline-block"></div>
          <div align="center" ng-if="video(macro.text)"><video preload="auto" autoplay="autoplay" loop="loop" style="float: bottom; width:100%; max-height: 281px; height:auto; display:inline-block">
            <source src="{{trustAsResourceUrl(macro.text)}}" type="video/mp4"></source>
          </video>
        </div>
      </div>
    </script>
  </body>
</html>