<html>
  <head>
    <title>Kokonatsu Macros</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
	<script type="text/javascript" src="https://assets.gfycat.com/gfycat.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <script src="/javascripts/dirPagination.js"></script>
  </head>
  <body ng-app="kokonatsu" ng-controller="MainCtrl" controller>
    <div class="row" align = "center">
      <h1>Kokonatsu Macros</h1>
    </div>


    <nav class="navbar navbar-default" style="margin: 0 20px">
      <div class="container-fluid" align="center" style="">
        <!-- TODO add guild selection -->
        <!-- <button type="button" class="btn btn-default navbar-btn dropdown-toggle" data-toggle="dropdown">{{displayGuild}} <span class="caret"></span></button>
        <div class="dropdown-menu" ng-repeat="guild in guilds" ng-if="guild != displayGuild">
          <button type="button" class="btn btn-primary">{{guild}}</button>
        </div> -->

        <form class="navbar-form navbar-right" style="">
          <div class="form-group">
            <label >Search</label>
            <input type="text" ng-model="search.macro" class="form-control" placeholder="Search" ng-change="reloadGfycat()">
          </div>
        </form>
      </div>
    </nav>
    <ui-view></ui-view>

    <script type="text/ng-template" id="/home.html">
      <div class = container-fluid align="center"><nav>
        <div class="button-group btn-group-sm" ng-repeat="letter in alphabet" style="display:inline-block; margin: 10px 5px">
          <button type="button" class="btn btn-primary" ng-click="filterAlphabet(letter)">{{letter}}</button>
        </div>
      </nav></div>
      <div class="container-fluid" align="center">
        <span dir-paginate="macro in displayMacros | orderBy: ['macro','index'] | filter:search | itemsPerPage: 12" style="">
           <div style="display:inline-block; margin: 0px 5px;">
            <div style="float:top"><h3>{{macro.macro}}<span ng-if="macro.index>=0"> ({{macro.index+1}})</span></h3></div>
            <div style="float:left">
              <a href="{{macro.links[0]}}">
              <img src="{{macro.links[0]}}" class="img-thumbnail" ng-if="img(macro,macro.links[0])" style="width:450px; height:252px;">
              <video ng-if="video(macro.links[0])" preload="auto" autoplay="autoplay" loop="loop" style="width:450px; max-height:252px;"">
                <source src="{{trustAsResourceUrl(macro.links[0])}}" type="video/mp4"></source>
              </video>
  		    <span class='gfyitem' data-id="{{gfycatDataID(macro.links[0])}}" ng-if="gfycat(macro.links[0])" style="width:450px; max-height:252px;"></span>
              </a>
            </div>
          </div>
        </span>
      </div>
      <div style="text-align:center">
        <dir-pagination-controls on-page-change="pageChanged()" max-size="30" align="center"></dir-pagination-controls>
      </div>
    </script>

  </body>
</html>