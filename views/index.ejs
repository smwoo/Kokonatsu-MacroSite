<html>
  <head>
    <title>Kokonatsu Macros</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
	<script type="text/javascript" src="https://assets.gfycat.com/gfycat.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
  </head>
  <body ng-app="kokonatsu" ng-controller="MainCtrl" controller>
    <div class="row" align = "center">
      <h1>Kokonatsu Macros</h1>
    </div>

    <!-- <nav class="navbar navbar-default">
      <div class="container-fluid">
        <ul class="nav navbar-nav" ng-repeat="guild in guilds">
          <li><a href="#">{{guild}}</a></li>
        </ul>
      </div>
    </nav> -->
    <ui-view></ui-view>


    <script type="text/ng-template" id="/home.html">
      <div class="container-fluid">
        <div class="row" style="text-align: center;">
          <div ng-repeat="macro in macros | orderBy: 'macro'" style="float: left;">
            <div class="clearfix" ng-if="$index % 3 == 0"></div>
            <div align="center" ng-repeat= "link in macro.links track by $index" style="float:left; height:350px">
              <span align="center"><h3>{{macro.macro}}<span ng-if="macro.links.length > 1"> ({{$index+1}})</span></h3></span>
              <a href="{{link}}">
              <img align="center" class="col-md-4" src="{{link}}" class="img-thumbnail" ng-if="img(link)" style="; width:500px; height:281px; display:inline-block">
              <video align="center" class="col-md-4" ng-if="video(link)" preload="auto" autoplay="autoplay" loop="loop" style="float: left; width:500px; max-height:281px; display:inline-block">
                <source src="{{trustAsResourceUrl(link)}}" type="video/mp4"></source>
              </video>
			  <div class='gfyitem' data-id="{{gfycatDataID(link)}}" ng-if="gfycat(link)" style="float: left; width:500px; max-height:281px; display:inline-block"></div>
              </a>
            </div>
          </div>
        </div>
    </script>
  </body>
</html>